---
# Front matter
---
{"recipes":[
{% for recipe in site.recipes %}

  {
    "title": "{{ recipe.title }}",
    {% if recipe.categories %} "categories"  : [
      {% for category in recipe.categories %} "{{ category }}"
        {% unless forloop.last %},{% endunless %}
      {% endfor %}
      ],
    {% else %}
      "categories"  : [],
    {% endif %}
    {% if recipe.tags %} "tags"  : [
      {% for tag in recipe.tags %} "{{ tag }}"
        {% unless forloop.last %},{% endunless %}
      {% endfor %}
      ]
    {% else %}
      "tags"  : []
    {% endif %}

  }

  {% unless forloop.last %},{% endunless %}

{% endfor %}
]}